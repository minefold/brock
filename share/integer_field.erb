<div class="control-group brock-field brock-field-integer">

  <label class="control-label brock-label"><%= label %></label>

  <div class="controls">
    <input class="brock-field"
           type="number"
           name="brock[<%= name %>]"
           <% if default %>
             placeholder="<%= default %>"
           <% end %>
           <% if value %>
             value="<%= value %>"
           <% end %>
           />
    <% if description %>
      <p class="help-block brock-description"><%= description %></p>
    <% end %>
  </div>

</div>
